<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.apromore</groupId>
    <artifactId>build-tools</artifactId>
    <version>1.1</version>
    <packaging>jar</packaging>

    <url>http://apromore.org/</url>
    <name>Apromore Build Tools Extension</name>
    <description>The Build tools are to help track changes in the code and a place to store checkstyle configuration for all the other projects in Apromore.</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>