<beans:beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/osgi            http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <!-- Other OSGi services this component consumes -->
<!--
    <osgi:reference id="managerService" interface="org.apromore.manager.client.ManagerService"/>
    <osgi:reference id="securityService" interface="org.apromore.service.SecurityService"/>
-->

    <!-- Other OSGi services this component consumes -->
    <osgi:reference id="eventLogService" interface="org.apromore.service.EventLogService"/>
    <osgi:reference id="csvExporterLogic" interface="org.apromore.service.csvexporter.CSVExporterLogic"/>


    <!-- Expose the components as OSGi services -->

    <osgi:service interface="org.apromore.plugin.portal.PortalPlugin" auto-export="interfaces">
        <beans:bean class="org.apromore.plugin.portal.file.UploadFilePlugin"/>
    </osgi:service>
  
    <osgi:service interface="org.apromore.plugin.portal.PortalPlugin" auto-export="interfaces">
        <beans:bean class="org.apromore.plugin.portal.file.DownloadSelectionPlugin">
            <beans:property name="csvExporterLogic" ref="csvExporterLogic"/>
            <beans:property name="eventLogService" ref="eventLogService"/>
        </beans:bean>
    </osgi:service>
  
    <osgi:service interface="org.apromore.plugin.portal.PortalPlugin" auto-export="interfaces">
        <beans:bean class="org.apromore.plugin.portal.file.CreateFolderPlugin"/>
    </osgi:service>
  
    <osgi:service interface="org.apromore.plugin.portal.PortalPlugin" auto-export="interfaces">
        <beans:bean class="org.apromore.plugin.portal.file.CreateProcessPlugin"/>
    </osgi:service>
  
    <osgi:service interface="org.apromore.plugin.portal.PortalPlugin" auto-export="interfaces">
        <beans:bean class="org.apromore.plugin.portal.file.EditSelectionPlugin"/>
    </osgi:service>
  
    <osgi:service interface="org.apromore.plugin.portal.PortalPlugin" auto-export="interfaces">
        <beans:bean class="org.apromore.plugin.portal.file.EditSelectionMetadataPlugin"/>
    </osgi:service>
  
    <osgi:service interface="org.apromore.plugin.portal.PortalPlugin" auto-export="interfaces">
        <beans:bean class="org.apromore.plugin.portal.file.DeleteSelectionPlugin"/>
    </osgi:service>

</beans:beans>
