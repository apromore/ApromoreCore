<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<zk>
  <window xmlns:ca="client/attribute"
          xmlns:n="native"
          sclass="ap-calendars-win"
          width="800px" height="80%" position="center"
          style="max-width: 1400px;"
          title="Calendar Management" apply="org.apromore.plugin.portal.calendar.controllers.Calendars">
    <script type="text/javascript" src="./libs/tippy/6.2.7/popper.min.js"></script>
    <script type="text/javascript" src="./libs/tippy/6.2.7/tippy-bundle.umd.min.js"></script>
    <script type="text/javascript" src="./calendar/js/index.js"></script>
    <style src="./calendar/css/index.css" />
    <vbox id="calendarsWrapper" hflex="1" vflex="1" spacing="0">
    <hbox sclass="ap-window-header-actions" hflex="1" align="start" pack="start" spacing="0"
            style="padding: 8px;">
       <div style="margin-bottom: 8px;" vflex="min">
            <div sclass="ap-calendar-log-detail">
                <span id="selectedIconLog" sclass="ap-icon ap-icon-log"/>   
                <label id="selectedName">${arg.artifactName}</label>             
            </div>            
        </div>
      </hbox>
      <hbox sclass="ap-window-header-actions" hflex="1" align="start" pack="start" spacing="0"
            style="padding: 8px;">
        <button id="addNewCalendarBtn" iconSclass="z-icon-plus-circle" tooltiptext="Add a new calendar">
          Add new calendar
        </button>
      </hbox>
      <hbox hflex="1" align="start" pack="start" spacing="0"
            style="padding:10px 0px 5px 10px;">
        <label value="Available custom calendars:"/>
      </hbox>
      <listbox checkmark="true" multiple="false" sclass="ap-calendars-listbox" id="calendarListbox" vflex="1" hflex="1" nonselectableTags="input">
        <listhead>
          <listheader align="left" label="Name" hflex="1" />
          <listheader align="left" label="Created on" width="120px" />
          <listheader align="center" label="" width="36px" /><!-- icon -->
          <listheader align="center" label="" width="36px" /><!-- icon -->
        </listhead>
      </listbox>
      <div sclass="ap-window-footer-actions" height="42px">
        <button id="selectBtn" label="Apply calendar" iconSclass="z-icon-check-circle"
                tooltiptext="Apply selected custom calendar to log"/>
        <button id="restoreBtn" label="Restore" iconSclass="z-icon-check-circle"
                tooltiptext="Restore original calendar"/>
        <button id="cancelBtn" label="Cancel" iconSclass="z-icon-times-circle" />
      </div>
    </vbox>
  </window>
</zk>
