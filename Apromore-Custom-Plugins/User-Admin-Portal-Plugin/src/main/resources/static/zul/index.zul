<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?component name="userTabComp" macroURI="~./user-admin/macros/user-tab.zul" inline="true" ?>
<?component name="groupTabComp" macroURI="~./user-admin/macros/group-tab.zul" inline="true" ?>
<?component name="roleTabComp" macroURI="~./user-admin/macros/role-tab.zul" inline="true" ?>
<window xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ca="client/attribute"
        xmlns:w="client"
        sclass="ap-usrmgt-win"
        width="90%" height="90%" position="center"
        closable="true"
        title="${labels.usrMgt_title_text}" apply="org.apromore.plugin.portal.useradmin.UserAdminController">
  <caption>
    <toolbarbutton iconSclass="ap-icon ap-icon-help" href="${labels.help_userManagement}" target="_blank" />
  </caption>
  <script type="text/javascript" src="~./user-admin/js/index.js"></script>
  <script type="text/javascript"><![CDATA[
	]]></script>
  <style src="~./user-admin/css/index.css"/>
  <vbox vflex="1" hflex="1" spacing="0">
    <tabbox id="tabbox" vflex="1" hflex="1" sclass="ap-usrmgt-tabbox" style="border: none;">
      <tabs id="tabs" vflex="1" hflex="1">
        <tab label="${$composer.labels.users_text}" id="userTab" />
        <tab label="${$composer.labels.groups_text}" id="groupTab" />
        <tab label="${$composer.labels.roles_text}" id="roleTab" />
      </tabs>
      <tabpanels vflex="1" hflex="1">
        <tabpanel vflex="1" hflex="1" style="padding: 0;">
          <userTabComp/>
        </tabpanel>
        <tabpanel vflex="1" hflex="1" style="padding: 0;" id="groupsTabPanel">
          <groupTabComp/>
        </tabpanel>
        <tabpanel vflex="1" hflex="1" style="padding: 0;" id="rolesTabPanel">
          <roleTabComp/>
        </tabpanel>
      </tabpanels>
    </tabbox>
    <div sclass="ap-window-footer-actions" visible="false">
      <button id="okBtn" label="${labels.common_ok_text}" iconSclass="z-icon-check-circle"/>
    </div>
  </vbox>
</window>
