<?xml version="1.0" encoding="UTF-8"?>


<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>

    <artifactId>process-discoverer-portal-plugin</artifactId>
    <version>2.0.0</version>
    <packaging>bundle</packaging>
    <name>Process Discoverer Portal Plugin</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Import-Package>
                            org.apromore.portal.servlet,
                            com.sun.xml.bind.v2;resolution:=optional,
                            org.apromore.manager.client.*,
                            org.apromore.portal.*,
                            org.apromore.plugin,
                            org.apromore.jgraph.*;version="[1.0.0,2)",
                            org.apromore.processmining.models.*;version="[1.0,2.0)",
                            org.apromore.processmining.plugins.*;version="[1.0,2.0)",
                            org.springframework.beans.factory.aspectj,
                            org.springframework.security.web.session,
                            org.springframework.web.context,
                            org.springframework.web.context.request,
                            org.springframework.web.filter,
                            org.zkoss.zel.impl,
                            org.zkoss.zk.au.http,
                            org.zkoss.zk.ui.http,
                            org.zkoss.zul.impl,
                            *
                        </Import-Package>
                        <Export-Package>
                            org.apromore.plugin.portal.processdiscoverer,
                            org.apromore.plugin.portal.processdiscoverer.plugins
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.0</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit4</artifactId>
                        <version>2.22.0</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <argLine>-Xmx20G</argLine>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.eclipse.collections</groupId>
            <artifactId>eclipse-collections</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.apromore.plugin</groupId>
            <artifactId>log-filter-portal-plugin-generic</artifactId>
            <version>1.0.0</version>
        </dependency>

        <dependency>
            <groupId>org.apromore.plugin</groupId>
            <artifactId>log-animation-portal-plugin-api</artifactId>
            <version>1.0.0</version>
        </dependency>

        <dependency>
           <groupId>org.apromore</groupId>
           <artifactId>log-logic</artifactId>
           <version>1.0.0</version>
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>process-discoverer-logic</artifactId>
            <version>2.0.0</version>             
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>log-osgi</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>jgraph-osgi</artifactId>
            <version>1.0</version>
        </dependency>          
        
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>prom-bpmn-osgi</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-commons</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-manager</artifactId>
            <version>1.1</version>            
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>manager-client</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-portal</artifactId>
            <version>1.1</version>
            <classifier>classes</classifier>
        </dependency>

        <dependency>
            <groupId>org.apromore.plugin</groupId>
            <artifactId>plugin-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apromore.plugin</groupId>
            <artifactId>portal-plugin-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.ow2.bundles</groupId>
            <artifactId>ow2-bundles-externals-opencsv</artifactId>
            <version>1.0.36</version>
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>eclipse-collections-osgi</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apmlog</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
        </dependency>          

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>

