<mappings xmlns="http://dozermapper.github.io/schema/bean-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://dozermapper.github.io/schema/bean-mapping http://dozermapper.github.io/schema/bean-mapping.xsd">
   <mapping>
      <class-a>org.apromore.calendar.model.CalendarModel</class-a>
      <class-b>org.apromore.dao.model.CustomCalendar</class-b>
      <field custom-converter-id="stringToOffsetDateTime">
         <a>updated</a>
         <b>updated</b>
      </field>
      <field custom-converter-id="stringToOffsetDateTime">
         <a>created</a>
         <b>created</b>
      </field>
   </mapping>
   <mapping>
      <class-a>org.apromore.calendar.model.CalendarModel</class-a>
      <class-b>org.apromore.dao.model.CustomCalendarInfo</class-b>
      <field custom-converter-id="stringToOffsetDateTime">
         <a>updated</a>
         <b>updated</b>
      </field>
      <field custom-converter-id="stringToOffsetDateTime">
         <a>created</a>
         <b>created</b>
      </field>
   </mapping>
   <mapping>
      <class-a>org.apromore.calendar.model.HolidayModel</class-a>
      <class-b>org.apromore.dao.model.Holiday</class-b>
      <field custom-converter-id="stringToLocalDate">
         <a>holidayDate</a>
         <b>holidayDate</b>
      </field>
   </mapping>
   <mapping>
      <class-a>org.apromore.calendar.model.WorkDayModel</class-a>
      <class-b>org.apromore.dao.model.WorkDay</class-b>
      <field custom-converter-id="stringToOffsetTime">
         <a>startTime</a>
         <b>startTime</b>
      </field>
      <field custom-converter-id="stringToOffsetTime">
         <a>endTime</a>
         <b>endTime</b>
      </field>
      <field custom-converter-id="durationToduration">
         <a>duration</a>
         <b>duration</b>
      </field>
   </mapping>
</mappings>