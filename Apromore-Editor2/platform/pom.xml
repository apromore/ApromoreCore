                            !org.w3c.css.sac,
                            !org.w3c.dom.smil,
                            !org.w3c.dom.svg,
                            !org.w3c.dom.xpath,
                            *
                        </Import-Package>
                        <Web-ContextPath>/${site.editor}</Web-ContextPath>  <!-- specified in site.properties -->
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                    <!--
                    <packagingExcludes>
                        WEB-INF/lib/anf*.jar,WEB-INF/lib/cpf*.jar,WEB-INF/lib/canoniser*.jar,WEB-INF/lib/deployment*.jar,WEB-INF/lib/manager*.jar,WEB-INF/lib/plugin*.jar,
