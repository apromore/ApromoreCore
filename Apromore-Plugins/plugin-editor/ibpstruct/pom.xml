<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore.plugin</groupId>
        <artifactId>plugin</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>

    <!-- Meta data only for use in maven, use a unique artifact id -->
    <artifactId>ibpstruct-editor-plugin</artifactId>
    <name>Apromore Editor iBPStruct plugin</name>
    <description>Structurer for BPMN process models</description>
    <!-- We are a web application -->
    <packaging>war</packaging>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <unpackBundle>false</unpackBundle>
                    <instructions>
                        <Import-Bundle>
                            org.apromore.manager-client;version="[1.1,1.1]",
                            org.apromore.manager-ws-model;version="[1.1,1.1]",
                            org.springframework.ws;version="[2.1.0.RELEASE,2.1.0.RELEASE]"
                        </Import-Bundle>
                        <Import-Package>
                            !hub.top.*,
                            !junit.framework,
                            !org.junit,
                            com.sun.xml.bind.v2,
                            org.eclipse.virgo.web.dm,
                            org.springframework.web.context,
                            org.springframework.beans.factory.aspectj,
                            org.apromore.plugin,
                            org.apromore.plugin.editor,
                            *
                        </Import-Package>
                        <!-- Context path, please use a unique path -->
                        <Web-ContextPath>/ibpstruct</Web-ContextPath>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <!--
                        Exclude all dependencies by default as those should be OSGI bundles provided by the framework.
                        In case your plug-in has embedded dependencies those need to be included again.
                    -->
                    <packagingExcludes> <!-- Regex to only include the same embedded dependencies as specified in maven-bundle-plugin -->
                        WEB-INF/lib/*.jar
                    </packagingExcludes>
                    <!--
                    <packagingIncludes>

                    </packagingIncludes>
                    -->
                </configuration>
            </plugin>
        </plugins>
		
    </build>

    <dependencies>
        <!-- Mandatory dependencies on the plugin and portal plugin APIs -->
        <dependency>
            <groupId>org.apromore.plugin</groupId>
            <artifactId>plugin-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apromore.plugin</groupId>
            <artifactId>editor-plugin-api</artifactId>
        </dependency>
        <!-- Editor plug-ins are webapps, so we need the servlet API -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-bpmn2_0</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>bpmndiagramimporter-logic</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>ibpstruct-logic</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>bpmntk-osgi</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>javax.inject</groupId>
            <artifactId>com.springsource.javax.inject</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-manager</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>2.1</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-diagram</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>log4j-over-slf4j</artifactId>
            <version>1.7.12</version>
        </dependency>

        <!-- JAXB -->
        <dependency>
            <groupId>com.sun.xml</groupId>
            <artifactId>com.springsource.com.sun.xml.bind</artifactId>
            <version>${jaxb-impl.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-extra-osgi</artifactId>
            <version>2.2.7-b58</version>
        </dependency>
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>com.springsource.javax.xml.bind</artifactId>
            <version>${jaxb-api.version}</version>
        </dependency>
    </dependencies>

</project>
