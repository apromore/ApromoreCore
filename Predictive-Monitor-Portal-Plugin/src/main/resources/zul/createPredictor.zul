<window xmlns:n="http://www.zkoss.org/2005/zk/native"
        xmlns:w="http://www.zkoss.org/2005/zk/client"
        xmlns:z="http://www.zkoss.org/2005/zul"
        closable="true" position="center" title="Predictive Monitoring: Create Predictor">
    <vbox width="500px">
        <grid>
            <columns>
               <column width="8em"/>
               <column/>
            </columns>
            <rows>
                <row>
                    Predictive method:
                    <selectbox id="predictiveMethod">
                        <template name="model">
                            <label value="${each}"/>
                        </template>
                    </selectbox>
                </row>
                <row>
                    Dataset name:
                    <textbox id="tag"/>
                </row>
                <!--
                <row>
                    case_id_col:
                    <label>"case_id"</label>
                </row>
                <row>
                    event_nr_col:
                    <label>"event_nr"</label>
                </row>
                -->
                <row>
                    Label column:
                    <selectbox id="labelCol">
                        <template name="model">
                            <label value="${each}"/>
                        </template>
                    </selectbox>
                </row>
                <row>
                    Positive label:
                    <textbox id="posLabel" value="true"/>
                </row>
                <row>
                    Learning method:
                    <selectbox id="clsMethod">
                        <template name="model">
                            <label value="${each.name}"/>
                        </template>
                    </selectbox>
                </row>
                <row>
                    Estimators:
                    <decimalbox id="nEstimators" value="250"/>
                </row>
                <row>
                    Maximum features:
                    <decimalbox id="maxFeatures" value="0.4"/>
                </row>
                <row>
                    Learning rate:
                    <decimalbox id="learningRate" value="0.03"/>
                </row>
            </rows>
        </grid>
        <div align="center">
            <button id="ok" label="OK" image="img/ok.png"/>
            <button id="cancel" label="Cancel" image="img/cancel2.png"/>
        </div>
    </vbox>
</window>

