<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.apromore.plugin</groupId>
		<artifactId>plugin-parent</artifactId>
		<version>1.0</version>
	</parent>

	<artifactId>canoniser-bpmn</artifactId>
	<name>Apromore Canoniser BPMN</name>
	<url>http://code.google.com/p/apromore/</url>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Export-Package>
							<!-- Export nothing as we're a pure implementation bundle -->
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>


	<dependencies>
	
		<!-- Blueprint -->
		<dependency>
			<groupId>org.eclipse.gemini</groupId>
			<artifactId>org.eclipse.gemini.blueprint.extender</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.gemini</groupId>
			<artifactId>org.eclipse.gemini.blueprint.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.gemini</groupId>
			<artifactId>org.eclipse.gemini.blueprint.io</artifactId>
		</dependency>

		<!-- Plugin APIs -->
		<dependency>
			<groupId>org.apromore.plugin</groupId>
			<artifactId>plugin-api</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apromore.plugin</groupId>
			<artifactId>canoniser-api</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>

		<!-- Schema -->
		<dependency>
			<groupId>org.apromore</groupId>
			<artifactId>anf-schema</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apromore</groupId>
			<artifactId>cpf-schema</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apromore</groupId>
			<artifactId>bpmn-schema</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>

	<!-- Needed for the JAXB IDResolver -->
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-xjc</artifactId>
			<version>2.1.6</version>
		</dependency>

	<!-- Test dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
		<dependency>
			<groupId>org.easymock</groupId>
			<artifactId>easymock</artifactId>
		</dependency>

	<!-- Needed for NullOutputStream -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-io</artifactId>
			<version>1.3.2</version>
		</dependency>
	</dependencies>

</project>
