<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore.plugin</groupId>
        <artifactId>plugin</artifactId>
        <version>1.1</version>
        <relativePath>../../../</relativePath>
    </parent>

    <artifactId>plugin-api-provider-archetype</artifactId>
    <name>Apromore Plugin API Provider Archetype</name>
    <url>http://www.apromore.org</url>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-deps</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <outputDirectory>${project.build.directory}/repository/</outputDirectory>
                            <excludeScope>provided</excludeScope>
                            <excludeGroupIds>org.apromore</excludeGroupIds>
                            <excludeArtifactIds>
                                com.springsource.org.aopalliance,jcl-over-slf4j,org.eclipse.gemini.blueprint.extender,org.eclipse.gemini.blueprint.io,
                                org.eclipse.gemini.blueprint.core,org.eclipse.osgi,org.eclipse.osgi.services,slf4j-api,org.springframework.aop,
                                org.springframework.asm,org.springframework.beans,org.springframework.context,org.springframework.core,
                                org.springframework.expression,cglib-nodep,easymock,hamcrest-core,junit,objenesis
                            </excludeArtifactIds>
                            <excludeTypes>pom</excludeTypes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
