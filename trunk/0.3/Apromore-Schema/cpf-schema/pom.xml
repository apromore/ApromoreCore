<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    
    <groupId>org.apromore</groupId>
    <artifactId>cpf-schema</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0-SNAPSHOT</version>

    <url>http://code.google.com/p/apromore/</url>
    <name>Apromore Common CPF Generated Code</name>
    <description>Apromore is an open and extensible repository to store and disclose business process models of a
        variety of types and languages, and beyond that, to build on top of existing tools and techniques, to provide
        state-of-the-art features for model presentation, analysis, integration, contextualization, improvement, and
        re-use.
    </description>

    <issueManagement>
        <system>Google Code</system>
        <url>http://code.google.com/p/apromore/wiki/IssueTracker</url>
    </issueManagement>

    <scm>
        <developerConnection>scm:svn:https://apromore.googlecode.com/svn/base-pom</developerConnection>
        <connection>scm:svn:http://apromore.googlecode.com/svn/base-pom</connection>
        <url>http://code.google.com/p/apromore/source/browse/base-pom/</url>
    </scm>

    <ciManagement>
        <system>Hudson</system>
        <url>http://131.181.88.5:8080/view/apromore</url>
    </ciManagement>

    <distributionManagement>
        <site>
            <id>website</id>
            <url>dav:http://131.181.88.5:9000/projects/apromore</url>
        </site>
    </distributionManagement>

    <prerequisites>
        <maven>2.2.1</maven>
    </prerequisites>

    <inceptionYear>2010</inceptionYear>

    <licenses>
        <license>
            <name>GNU General Public License v3</name>
            <distribution>repo</distribution>
            <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
        </license>
    </licenses>

    <organization>
        <name>QUT</name>
        <url>http://www.qut.edu.au</url>
    </organization>

    <mailingLists>
        <mailingList>
            <name>Apromore Forum</name>
            <post>apromore-rm@googlegroups.com</post>
            <unsubscribe>apromore-rm+unsubscribe@googlegroups.com</unsubscribe>
        </mailingList>
    </mailingLists>

    <developers>
        <developer>
            <id>u312978</id>
            <name>Cameron James</name>
            <email>cam.james@gmail.com</email>
            <organization>Suncorp</organization>
            <organizationUrl>http://www.suncorp.com.au/</organizationUrl>
            <roles>
                <role>Active User</role>
            </roles>
            <timezone>+10</timezone>
        </developer>
    </developers>

    <build>
        <finalName>cpf-schema</finalName>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <schemaDirectory>${basedir}/src/main/xsd</schemaDirectory>
                    <generateDirectory>${basedir}/target/generated-sources/src</generateDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/target/generated-sources/src</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>