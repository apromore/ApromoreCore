<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.apromore</groupId>
    <artifactId>apromore-deploy</artifactId>
    <packaging>pom</packaging>
    <version>1.1</version>
    <name>Deployer for apromore Devs</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${maven-antrun-plugin.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>com.sun</groupId>
                        <artifactId>tools</artifactId>
                        <version>${jdk.version}</version>
                        <scope>system</scope>
                        <systemPath>${java.home}/../lib/tools.jar</systemPath>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>package</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <property file="local.properties"/>
                                <property file="build.properties"/>

                                <delete dir="${dir-tomcat-webapps}/manager"/>
                                <delete file="${dir-tomcat-webapps}/manager.war"/>
                                <copy file="${basedir}/../Apromore-Manager/target/manager.war" todir="${dir-tomcat-webapps}"/>

                                <delete dir="${dir-tomcat-webapps}/portal"/>
                                <delete file="${dir-tomcat-webapps}/portal.war"/>
                                <copy file="${basedir}/../Apromore-Portal/target/portal.war" todir="${dir-tomcat-webapps}"/>

                                <delete dir="${dir-tomcat-webapps}/editor"/>
                                <delete file="${dir-tomcat-webapps}/editor.war"/>
                                <copy file="${basedir}/../Apromore-Editor/target/editor.war" todir="${dir-tomcat-webapps}"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <maven-antrun-plugin.version>1.7</maven-antrun-plugin.version>
        <jdk.version>1.7.0</jdk.version>
    </properties>

</project>
