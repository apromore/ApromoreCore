<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.apromore</groupId>
    <artifactId>build-tools</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <url>http://apromore.org/</url>
    <name>Apromore Build Tools Extension</name>
    <description>The Build tools are to help track changes in the code and a place to store checkstyle configuration for all the other projects in Apromore.</description>

    <scm>
        <url>http://apromore.googlecode.com/svn/trunk/Build-Tools</url>
        <connection>scm:svn:http://apromore.googlecode.com/svn/trunk/Build-Tools</connection>
        <developerConnection>scm:svn:https://apromore.googlecode.com/svn/trunk/Build-Tools</developerConnection>
    </scm>

    <ciManagement>
        <system>Bamboo</system>
        <url>http://apromore-build.qut.edu.au/bamboo</url>
        <notifiers>
            <notifier>
                <address>cam.james@gmail.com</address>
            </notifier>
        </notifiers>
    </ciManagement>

    <issueManagement>
        <system>JIRA</system>
        <url>http://apromore-build.qut.edu.au/jira/browse/support</url>
    </issueManagement>

    <distributionManagement>
        <site>
            <id>Apromore-site</id>
            <url>dav:http://apromore.qut.edu.au/projects/Build-Tools</url>
        </site>
    </distributionManagement>

    <licenses>
        <license>
            <name>GNU General Public License v3</name>
            <distribution>repo</distribution>
            <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
        </license>
    </licenses>

    <organization>
        <name>QUT</name>
        <url>http://www.qut.edu.au</url>
    </organization>

    <prerequisites>
        <maven>2.2.1</maven>
    </prerequisites>

    <inceptionYear>2010</inceptionYear>

    <mailingLists>
        <mailingList>
            <name>Apromore Forum</name>
            <post>apromore-rm@googlegroups.com</post>
            <unsubscribe>apromore-rm+unsubscribe@googlegroups.com</unsubscribe>
        </mailingList>
    </mailingLists>

    <developers>
        <developer>
            <id>u312978</id>
            <name>Cameron James</name>
            <email>cam.james@gmail.com</email>
            <organization>Suncorp</organization>
            <organizationUrl>http://www.suncorp.com.au/</organizationUrl>
            <roles>
                <role>Active User</role>
            </roles>
            <timezone>+10</timezone>
        </developer>
    </developers>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-changes-plugin</artifactId>
                <version>${maven-change-plugin.version}</version>
                <inherited>true</inherited>
            </plugin>
        </plugins>
    </reporting>

    <properties>
        <maven-change-plugin.version>2.6</maven-change-plugin.version>
    </properties>

</project>