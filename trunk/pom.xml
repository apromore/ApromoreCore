<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.apromore</groupId>
    <artifactId>apromore-master</artifactId>
    <packaging>pom</packaging>
    <version>1.0</version>

    <url>http://code.google.com/p/apromore/</url>
    <name>Advanced Process Model Repository</name>
    <description>Apromore is an open and extensible repository to store and disclose business process models of a
        variety of types and languages, and beyond that, to build on top of existing tools and techniques, to provide
        state-of-the-art features for model presentation, analysis, integration, contextualization, improvement, and
        re-use.
    </description>

    <modules>
        <!-- Needed before Parent Builds -->
        <module>Build-Tools</module>
        <module>Test-Tools</module>

        <!-- Apromore project, includes the above -->
        <module>Apromore-Parent</module>
        
        <module>Apromore-Schema/anf-schema</module>
        <module>Apromore-Schema/bpmn-schema</module>
        <module>Apromore-Schema/cpf-schema</module>
        <module>Apromore-Schema/epml-schema</module>
        <module>Apromore-Schema/pnml-schema</module>
        <module>Apromore-Schema/rlf-schema</module>
        <module>Apromore-Schema/xpdl-schema</module>
        <module>Apromore-Schema/yawl-schema</module>
        
        <module>Apromore-Clients/manager-client</module>
        <module>Apromore-Clients/portal-client</module>
        
        <module>Apromore-Core/apromore-service</module>
        <module>Apromore-Core/apromore-webapp</module>
        
        <module>Apromore-Portal/portal-service</module>
        <module>Apromore-Portal/portal-webapp</module>

        <!-- Editor -->
        <module>Apromore-Editor</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${maven-antrun-plugin.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>com.sun</groupId>
                        <artifactId>tools</artifactId>
                        <version>${jdk.version}</version>
                        <scope>system</scope>
                        <systemPath>${java.home}/../lib/tools.jar</systemPath>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>package</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <property file="build.properties"/>

                                <delete dir="${dir-tomcat-webapps}/manager"/>
                                <delete file="${dir-tomcat-webapps}/manager.war"/>
                                <copy file="${basedir}/Apromore-Core/apromore-webapp/target/manager.war" todir="${dir-tomcat-webapps}"/>

                                <delete dir="${dir-tomcat-webapps}/portal"/>
                                <delete file="${dir-tomcat-webapps}/portal.war"/>
                                <copy file="${basedir}/Apromore-Portal/portal-webapp/target/portal.war" todir="${dir-tomcat-webapps}"/>

                                <delete dir="${dir-tomcat-webapps}/editor"/>
                                <delete file="${dir-tomcat-webapps}/editor.war"/>
                                <copy file="${basedir}/Apromore-Editor/target/editor.war" todir="${dir-tomcat-webapps}"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <maven-antrun-plugin.version>1.7</maven-antrun-plugin.version>
        <jdk.version>1.7.0</jdk.version>
    </properties>

</project>