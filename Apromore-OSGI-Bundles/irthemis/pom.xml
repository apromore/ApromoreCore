<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>

    <groupId>org.themis</groupId>
    <artifactId>themis-osgi</artifactId>
    <version>1.0</version>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Embed-Dependency>artifactId=themis</Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                        <Embed-Directory>WEB-INF/lib</Embed-Directory>
                        <Bundle-ClassPath>.,{maven-dependencies},WEB-INF/classes</Bundle-ClassPath>
                        <Bundle-Name>Themis OSGI</Bundle-Name>
                        <Bundle-SymbolicName>org.themis-osgi</Bundle-SymbolicName>
                        <Export-Package>
                            org.themis,
                            org.themis.ir,
                            org.themis.ir.etvsm,
                            org.themis.ir.vsm,
                            org.themis.pp,
                            org.themis.util
                        </Export-Package>
                        <Import-Package>
                            org.postgresql,
                            org.postgresql.copy,
                            org.postgresql.core,
                            org.postgresql.core.types,
                            org.postgresql.core.v2,
                            org.postgresql.core.v3,
                            org.postgresql.ds,
                            org.postgresql.ds.common,
                            org.postgresql.ds.jdbc4,
                            org.postgresql.ds.jdbc23,
                            org.postgresql.fastpath,
                            org.postgresql.geometric,
                            org.postgresql.gss,
                            org.postgresql.jdbc2,
                            org.postgresql.jdbc2.optional,
                            org.postgresql.jdbc3,
                            org.postgresql.jdbc3g,
                            org.postgresql.jdbc4,
                            org.postgresql.jdbc4.array,
                            org.postgresql.largeobject,
                            org.postgresql.ssl,
                            org.postgresql.ssl.jdbc4,
                            org.postgresql.translation,
                            org.postgresql.util,
                            org.postgresql.xa,
                            org.postgresql.xa.jdbc3,
                            org.postgresql.xa.jdbc4
                        </Import-Package>
                        <!--<Export-Package>*</Export-Package>-->
                        <Embed-StripGroup>true</Embed-StripGroup>
                        <Embed-Transitive>true</Embed-Transitive>
                    </instructions>
                </configuration>
            </plugin>

            <!--<plugin>-->
                <!--<artifactId>maven-dependency-plugin</artifactId>-->
                <!--<executions>-->
                    <!--<execution>-->
                        <!--<id>copy-dependencies</id>-->
                        <!--<phase>package</phase>-->
                        <!--<goals>-->
                            <!--<goal>copy-dependencies</goal>-->
                        <!--</goals>-->
                    <!--</execution>-->
                <!--</executions>-->
            <!--</plugin>-->
                    <!--</instructions>-->
                <!--</configuration>-->
            <!--</plugin>-->
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.themis</groupId>
            <artifactId>themis</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql-osgi</artifactId>
            <version>9.3-1101-jdbc41</version>
        </dependency>

