<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>

    <groupId>org.apromore</groupId>
    <packaging>bundle</packaging>
    <artifactId>zk-osgi</artifactId>
    <version>6.5.3</version>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Embed-Dependency>
                            artifactId=
                            zk-osgi|zcommon-osgi|zel-osgi|zkbind-osgi|zkplus-osgi
                            |zul-osgi|zhtml-osgi|zweb-osgi|zjavassist-osgi|zkspring-core
                        </Embed-Dependency>
                        <Bundle-ClassPath>.,{maven-dependencies}</Bundle-ClassPath>
                        <Embed-Transitive>true</Embed-Transitive>
                        <Bundle-Name>ZK OSGI</Bundle-Name>
                        <Bundle-SymbolicName>org.zkoss-osgi</Bundle-SymbolicName>
                        <Import-Package>
                            !bsh,
                            !com.sun.jdi.*,
                            !org.zkoss.zsoup.*,
                            !javax.enterprise.*,
                            !groovy.*,
                            !org.acegisecurity.*,
                            !org.hibernate.*,
                            !org.jruby.*,
                            !org.python.*,
                            !org.mozilla.javascript,
                            !org.reflections.*,
                            !org.seasar.*,
                            !org.xml.*,
                            !org.zkforge.*,
                            !org.apache.bsf.*,
                            *
                        </Import-Package>
                        <Export-Package>
                            org.zkoss.*
                        </Export-Package>
                        <DynamicImport-Package>
                            org.apromore.plugin.portal.*,
                            zul.*
                        </DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <!-- ZK Libraries -->
        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zkbind-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>
        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zhtml-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>
        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zk-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>
        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zkplus-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>
        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zul-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>

        <dependency>
            <groupId>org.zkoss.common</groupId>
            <artifactId>zweb-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>
        <dependency>
            <groupId>org.zkoss.common</groupId>
            <artifactId>zel-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>
        <dependency>
            <groupId>org.zkoss.common</groupId>
            <artifactId>zcommon-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>
        <dependency>
            <groupId>org.zkoss.common</groupId>
            <artifactId>zjavassist-osgi</artifactId>
            <version>8.0.2.2</version>
        </dependency>

        <dependency>
            <groupId>org.zkoss.zk</groupId>
            <artifactId>zkspring-core</artifactId>
<!--
            <exclusions>
                <exclusion>
                    <groupId>org.javassist</groupId>
                    <artifactId>javassist</artifactId>
                </exclusion>
            </exclusions>
-->
        </dependency>
        <!-- Replacement for the org.javassist from the hibernate package -->
<!--
        <dependency>
            <groupId>org.jboss.javassist</groupId>
            <artifactId>com.springsource.javassist</artifactId>
        </dependency>
-->

    </dependencies>
</project>
