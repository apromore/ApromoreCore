<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>org.apromore</groupId>
    <artifactId>apromore-tools</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <url>http://code.google.com/p/apromore/</url>
    <name>Apromore Build Tools Extension</name>
    <description>
        The Build tools are to help track changes in the code and a place to store checkstyle
        configuration for all the other projects in Apromore.
     </description>

    <issueManagement>
        <system>Google Code</system>
        <url>http://code.google.com/p/apromore/wiki/IssueTracker</url>
    </issueManagement>

    <scm>
        <developerConnection>scm:svn:https://apromore.googlecode.com/svn/trunk/0.3/Apromore-Tools</developerConnection>
        <connection>scm:svn:http://apromore.googlecode.com/svn/trunk/0.3/Apromore-Tools</connection>
        <url>http://code.google.com/p/apromore/source/browse/trunk/0.3/Apromore-Tools</url>
    </scm>

    <ciManagement>
        <system>Jenkins</system>
        <url>http://131.181.88.156:8080/jenkins/view/Tools/</url>
    </ciManagement>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-changes-plugin</artifactId>
                <version>${maven-change-plugin.version}</version>
                <inherited>true</inherited>
            </plugin>
        </plugins>
    </reporting>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <java.source.version>1.6</java.source.version>
        <java.target.version>${java.source.version}</java.target.version>

        <!-- Plugins -->
        <maven-change-plugin.version>2.6</maven-change-plugin.version>
    </properties>

</project>