<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="Apromore" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>

        <!-- Tables -->
        <class>org.apromore.dao.model.Annotation</class>
        <class>org.apromore.dao.model.Canonical</class>
        <class>org.apromore.dao.model.EditSessionMapping</class>
        <class>org.apromore.dao.model.Native</class>
        <class>org.apromore.dao.model.NativeType</class>
        <class>org.apromore.dao.model.Process</class>
        <class>org.apromore.dao.model.SearchHistory</class>
        <class>org.apromore.dao.model.TempVersion</class>
        <class>org.apromore.dao.model.TempVersionId</class>
        <class>org.apromore.dao.model.User</class>

        <!-- Views -->
        <class>org.apromore.dao.model.Keyword</class>
        <class>org.apromore.dao.model.KeywordId</class>
        <class>org.apromore.dao.model.ProcessRanking</class>
        <class>org.apromore.dao.model.ProcessRankingId</class>
    </persistence-unit>

</persistence>
