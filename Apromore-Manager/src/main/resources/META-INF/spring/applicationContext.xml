<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:property-placeholder location="classpath:/*.properties"/>

    <context:annotation-config />
    <context:spring-configured />

    <!-- Aspects -->
    <aop:aspectj-autoproxy />

    <!--<bean id="loggingStatsTimerAspect" class="org.apromore.aop.TimerStatsInterceptor"/>-->
    <!--<bean id="loggingTimerAspect" class="org.apromore.aop.TimerInterceptor"/>-->
    <!--<bean id="loggingMethodAspect" class="org.apromore.aop.LoggingInterceptor"/>-->


    <!-- Import other Application Context used to construct the Spring context. -->
    <import resource="osgi-context.xml" />
    <import resource="applicationContext-jpa.xml" />
    <import resource="applicationContext-services.xml" />

</beans>
