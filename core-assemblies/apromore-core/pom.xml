<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apromore</groupId>
    <artifactId>core-assemblies</artifactId>
    <version>7.20-SNAPSHOT</version>
  </parent>
  <artifactId>apromore-core</artifactId>
  <packaging>pom</packaging>

  <properties>
    <core.basedir>${project.basedir}/../..</core.basedir>
    <version.edition>Apromore Core</version.edition>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>core-features</artifactId>
      <version>${project.version}</version>
      <type>xml</type>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>karaf-shell-branding</artifactId>
      <version>1.0</version>
      <type>properties</type>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>framework</artifactId>
      <type>kar</type>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>framework</artifactId>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>standard</artifactId>
      <type>xml</type>
      <classifier>features</classifier>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>${project.build.directory}/templates</directory>
        <filtering>true</filtering>
        <targetPath>${project.build.directory}/assembly</targetPath>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>process-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>assembly</goal>
            </goals>
          </execution>
          <execution>
            <id>package</id>
            <goals>
              <goal>archive</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <installedFeatures>
            <feature>wrapper</feature>
            <feature>aries-blueprint</feature>
            <feature>shell-compat</feature>
          </installedFeatures>
          <startupFeatures>
            <feature>eventadmin</feature>
          </startupFeatures>
          <bootFeatures>
            <feature>wrap</feature>
            <feature>shell</feature>
            <feature>feature</feature>
            <feature>jaas</feature>
            <feature>ssh</feature>
            <feature>management</feature>
            <feature>bundle</feature>
            <feature>config</feature>
            <feature>deployer</feature>
            <feature>diagnostic</feature>
            <feature>feature</feature>
            <feature>instance</feature>
            <feature>kar</feature>
            <feature>log</feature>
            <feature>package</feature>
            <feature>service</feature>
            <feature>system</feature>
            <feature>scr</feature>

            <feature>pax-web-http-whiteboard</feature>
            <feature>virgo-compatibility</feature>

            <feature>webconsole</feature>
            <feature>apromore-core</feature>
          </bootFeatures>
          <javase>${java.version}</javase>
          <archiveTarGz>${karaf.archive.tar.gz}</archiveTarGz>
          <archiveZip>${karaf.archive.zip}</archiveZip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <configuration>
          <includeArtifactIds>karaf-shell-branding</includeArtifactIds>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <configuration>
          <propertiesEncoding>UTF-8</propertiesEncoding>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
          <execution>
            <id>site.properties</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <delimiters>
                <delimiter>@</delimiter>
              </delimiters>
              <outputDirectory>${project.build.directory}/assembly/etc</outputDirectory>
              <resources>
                <resource>
                  <directory>${core.basedir}</directory>
                  <includes>
                    <include>site.properties</include>
                  </includes>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.coderplus.maven.plugins</groupId>
        <artifactId>copy-rename-maven-plugin</artifactId>
        <version>1.0.1</version>
        <executions>
          <execution>
            <id>branding.properties</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${project.build.directory}/dependency/karaf-shell-branding-1.0.properties</sourceFile>
              <destinationFile>${project.build.directory}/templates/etc/branding.properties</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>git.cfg</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${core.basedir}/target/classes/META-INF/git.properties</sourceFile>
              <destinationFile>${project.build.directory}/assembly/etc/git.cfg</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>git.core.cfg</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${core.basedir}/target/classes/META-INF/git.properties</sourceFile>
              <destinationFile>${project.build.directory}/assembly/etc/git.core.cfg</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>ehcache.xml</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${core.basedir}/Apromore-Cache/src/main/resources/ehcache.xml</sourceFile>
              <destinationFile>${project.build.directory}/assembly/etc/ehcache.xml</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>portalContext-security.xml</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${core.basedir}/Supplements/Virgo/portalContext-security.xml</sourceFile>
              <destinationFile>${project.build.directory}/assembly/etc/portalContext-security.xml</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>site.cfg</id>
            <phase>process-resources</phase>
            <goals>
              <goal>rename</goal>
            </goals>
            <configuration>
              <sourceFile>${project.build.directory}/assembly/etc/site.properties</sourceFile>
              <destinationFile>${project.build.directory}/assembly/etc/site.cfg</destinationFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
