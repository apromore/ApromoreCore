                                        <!--var fileField = document.createElement("input");-->
                                        <!--fileField.setAttribute("type", "hidden");-->
                                        <!--fileField.setAttribute("id", "file");-->
                                        <!--fileField.setAttribute("name", "file");-->
                                        <!--fileField.setAttribute("value", transport.responseText);-->

                                        <!--bimpForm.appendChild(fileField);-->
