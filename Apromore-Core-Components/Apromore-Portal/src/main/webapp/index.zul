        /* must be embedded here */
        .ap-portal .z-north-body,
        .ap-portal .z-south-body,
        .ap-portal .z-west-body,
        .ap-portal .z-center-body,
        .ap-portal .z-east-body {
        padding: 0 !important;
        }

        .ap-wrapper-process .z-vlayout-inner,
        .ap-wrapper-process .z-window {
        background-color: transparent;
        width: 100% !important;
        height: 100% !important;
        }
    </style>
    <custom-attributes theme="${labels.theme}"/>

    <style>
        .custom-btn {
        font-family: Arial, Sans-Serif;
        font-size: 16px;
        text-decoration: none;
        /*text-shadow: -1px -1px 1px #616161;*/
        position: relative;

        -webkit-box-shadow: 0px 0px 0 #9a9a9a;
        -moz-box-shadow: 0px 0px 0 #9a9a9a;
        -webkit-transition: all 0.1s ease;
        -moz-transition: all 0.1s ease;
        padding: 0px;
        width: 40px;
        height: 100%;
        }

        .z-toolbarbutton-content {
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        font-size: 12px;
        font-weight: normal;
        font-style: normal;
        color: unset;
        background-color: transparent;
        border: 2px solid transparent;
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        -o-border-radius: 4px;
        -ms-border-radius: 4px;
        border-radius: 4px;
        line-height: 18px;
        display: inline-block;
        vertical-align: middle;
        position: relative;
        white-space: nowrap;
        }
        .custom-window {
        padding: 0;
        margin: 0;
        }
        .z-window-content {
        background-color: unset;
        padding: 0;
        margin: 0;
        }

        .z-paging {
        background: unset;
        }

        .z-listbox-autopaging .z-listcell-content {
        height: 32px;
        min-height: 10px;
        }

        .z-treerow .z-treecell {
        border-top: 0px;
        }
        .z-menubar {
        border-top: unset;
        }

        /*.z-north-header, .z-south-header, .z-west-header, .z-center-header, .z-east-header {
        padding: 4px 4px 4px;
        }*/
