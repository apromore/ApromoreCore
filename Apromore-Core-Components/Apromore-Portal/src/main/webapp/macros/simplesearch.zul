<!-- Controller is SimpleSearchController -->
<window id="simplesearchwindow"
        sclass="ap-container-search"
        style="margin: 5px 0 0 0;"
        hflex="1"
        xmlns:n="native"
        xmlns:ca="client/attribute"
>
  <style>
    .z-button {
    box-shadow: unset;
    }
  </style>
  <hbox id="previoussearcheshbox"
        width="100%"
        sclass="ap-search-combo"
        spacing="0">
    <span sclass="ap-search-part-icon" width="24px" id="doSearch">
      <n:i class="z-icon-search" />
    </span>
    <script>
      <![CDATA[
        Ap.search = Ap.search || {};
        Ap.search.onEnter = function (event) {
          if (event.keyCode === 13) {
            zAu.send(new zk.Event(zk.Widget.$('$previoussearchescombobox'), 'onEnter'));
          }
        }
      ]]>
    </script>
    <combobox
        id="previoussearchescombobox"
        autodrop="true"
        mold="rounded"
        width="226px"
        popupWidth="226px"
        buttonVisible="true"
        submitByEnter="true"
        tooltip="${labels.portal_search_hint}"
        placeholder="${labels.portal_search_text}"
        ca:onkeyup="Ap.search.onEnter(event)"
    />
    <span sclass="ap-search-part-clear" id="clearSearch" width="0">
      <n:i class="z-icon-times-circle" />
    </span>
    <button id="previoussearchesbutton"
            visible="false"
            width="34px"
            sclass="ap-icon ap-icon-search"
            style="background: transparent; padding: 0; border:none; margin-left: 7px;margin-right: 7px;"
            image="img/icon/svg/search_22.svg"/>
  </hbox>
</window>
