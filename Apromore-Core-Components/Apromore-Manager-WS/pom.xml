    <properties>
        <h2.version>1.3.171</h2.version>
    </properties>

    <build>
        <finalName>manager-ws</finalName>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0-alpha-2</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${project.parent.basedir}/site.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <!--
                    There is some problem in the bpstruct JAR that causes the newer version to throw an error!
                    So we use the older version as workaround
                -->
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <unpackBundle>false</unpackBundle>
                    <instructions>
                        <Embed-Dependency>artifactId=jaxb2-basics-runtime</Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                        <Embed-Directory>WEB-INF/lib</Embed-Directory>
                        <Bundle-ClassPath>.,{maven-dependencies},WEB-INF/classes</Bundle-ClassPath>
                        <Import-Bundle>
                            javax.persistence;bundle-version="[2.0.4,3)",
                            org.springframework.aop;bundle-version="[3.1.0,4.0)",
                            org.eclipse.persistence.jpa;bundle-version="[2.4,3.0)",
                            org.eclipse.persistence.core;bundle-version="[2.4,3.0)",
                            org.springframework.aspects;bundle-version="[3.1.0,4.0)",
                            org.springframework.context;bundle-version="[3.1.0,4.0)",
                            org.springframework.data.jpa;bundle-version="[1.1,2.0)",
                            org.springframework.data.core;bundle-version="[1.3,2.0)",
                            org.springframework.jdbc;bundle-version="[3.1.0,4.0)",
                            org.springframework.security.core;version="[3.1.0,4.0)",
                            org.springframework.security.remoting;version="[3.1.0,4.0)",
                            org.springframework.security.web;version="[3.1.0,4.0)",
                            org.springframework.transaction;bundle-version="[3.1.0,4.0)",
                            org.springframework.ws;version="[2.1.0.RELEASE,2.1.0.RELEASE]"
                        </Import-Bundle>
                        <Import-Package>
                            com.jolbox.bonecp,
                            com.sun.xml.bind,
                            com.sun.xml.bind.v2,
                            javax.persistence,
                            javax.persistence.criteria,
                            javax.persistence.metamodel,
                            javax.persistence.spi,
                            net.sf.cglib.core,
                            net.sf.cglib.proxy,
                            org.aopalliance.aop,
                            org.apromore.annotation,
                            org.apromore.annotation.exception,
                            org.apromore.annotation.provider,
                            org.apromore.canoniser.provider,
                            org.apromore.dao,
                            org.apromore.graph.canonical,
                            org.apromore.graph.canonical.converter,
                            org.apromore.graph.util,
                            org.apromore.plugin.deployment.provider,
                            org.apromore.plugin.exception,
                            org.apromore.plugin.property,
                            org.apromore.scheduler,
                            org.apromore.security,
                            org.apromore.security.exception,
                            org.apromore.service.helper,
                            org.apromore.service.impl,
                            org.apromore.toolbox.clustering,
                            org.apromore.toolbox.clustering.algorithm.dbscan,
                            org.apromore.toolbox.clustering.algorithm.hac,
                            org.apromore.toolbox.clustering.analyzers,
                            org.apromore.toolbox.clustering.containment,
                            org.apromore.toolbox.clustering.dissimilarity,
                            org.apromore.toolbox.clustering.dissimilarity.model,
                            org.aspectj.lang,
                            org.eclipse.persistence.internal.*,
                            org.eclipse.virgo.web.dm,
                            org.jbpt.graph.abs,
                            org.springframework.beans.factory,
                            org.springframework.remoting.httpinvoker,
                            org.springframework.orm.jpa,
                            org.springframework.orm.jpa.support,
                            org.springframework.orm.jpa.vendor,
                            org.springframework.web.context,
                            org.springframework.web.filter,
                            org.springframework.ws.server.endpoint.adapter,
                            org.springframework.web.servlet,
                            org.springframework.ws.soap.saaj,
                            org.springframework.ws.soap.server,
                            org.springframework.ws.soap.server.endpoint,
                            org.springframework.ws.server.endpoint.mapping,
                            org.springframework.ws.transport.http,
                            !edu.sussex.nlp.jws,
                            !junit*,
                            !net.didion.jwnl*,
                            !de.hpi.bpt.process.*,
                            !de.hpi.bpt.process.checks.structural,
                            !ee.ut.bpstruct,
                            !de.hpi.bpt.graph,
                            !de.hpi.bpt.graph.abs,
                            !de.hpi.bpt.hypergraph.abs,
                            !de.hpi.bpt.graph.algo.*,
                            *
                        </Import-Package>
                        <JPA-PersistenceUnits>Apromore</JPA-PersistenceUnits>
                        <Web-ContextPath>/${site.manager}</Web-ContextPath>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                    <packagingExcludes>
                        %regex[WEB-INF/lib/((?!jaxb2-basics-runtime).)*\.jar]
                    </packagingExcludes>
                    <archive>
                        <manifestFile>
                            ${project.build.outputDirectory}/META-INF/MANIFEST.MF
                        </manifestFile>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

