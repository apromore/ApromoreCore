<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore-editor-parent</artifactId>
        <version>1.2</version>
        <relativePath>../</relativePath>
    </parent>

    <artifactId>apromore-editor</artifactId>
    <packaging>war</packaging>
    <version>1.2</version>
    <name>Apromore Editor</name>

    <properties>
        <batik.version>1.8</batik.version>
        <editor-platform-extension.version>1.2</editor-platform-extension.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0-alpha-2</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${project.parent.parent.basedir}/site.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
            </plugin>

            <plugin>
                <groupId>org.apromore</groupId>
                <artifactId>sscompressor-maven-plugin</artifactId>
                <version>1.1</version>
                <configuration>
                    <ssDirString>${project.basedir}/src/main/stencilsets</ssDirString>
                    <outDirString>${project.basedir}/target/sscompressor</outDirString>
                </configuration>
                <executions>
                    <execution>
                        <id>compress_stencilsets</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <version>1.5.1</version>
                <configuration>
                    <preProcessAggregates>true</preProcessAggregates>
                    <aggregations>
                        <aggregation>
                            <insertNewLine>false</insertNewLine>
                            <output>${basedir}/target/apromore-editor-${project.version}/editor/apromore-editor.js</output>
                            <inputDir>${basedir}/src/main</inputDir>
                            <includes>
                                <include>../../target/classes/site.properties.js</include>
                                <include>scripts/utils.js</include>
                                <include>scripts/kickstart.js</include>
                                <include>scripts/erdfparser.js</include>
                                <include>scripts/datamanager.js</include>
                                <include>scripts/clazz.js</include>
                                <include>scripts/server.js</include>
                                <include>scripts/config.js</include>
                                <include>scripts/editor.js</include>
                                <include>scripts/Core/SVG/editpathhandler.js</include>
                                <include>scripts/Core/SVG/minmaxpathhandler.js</include>
                                <include>scripts/Core/SVG/pointspathhandler.js</include>
                                <include>scripts/Core/SVG/svgmarker.js</include>
                                <include>scripts/Core/SVG/svgshape.js</include>
                                <include>scripts/Core/SVG/label.js</include>
                                <include>scripts/Core/Math/math.js</include>
                                <include>scripts/Core/StencilSet/stencil.js</include>
                                <include>scripts/Core/StencilSet/property.js</include>
                                <include>scripts/Core/StencilSet/propertyitem.js</include>
                                <include>scripts/Core/StencilSet/complexpropertyitem.js</include>
                                <include>scripts/Core/StencilSet/rules.js</include>
                                <include>scripts/Core/StencilSet/stencilset.js</include>
                                <include>scripts/Core/StencilSet/stencilsets.js</include>
                                <include>scripts/Core/command.js</include>
                                <include>scripts/Core/bounds.js</include>
                                <include>scripts/Core/uiobject.js</include>
                                <include>scripts/Core/abstractshape.js</include>
                                <include>scripts/Core/canvas.js</include>
                                <include>scripts/Core/main.js</include>
                                <include>scripts/Core/svgDrag.js</include>
                                <include>scripts/Core/shape.js</include>
                                <include>scripts/Core/Controls/control.js</include>
                                <include>scripts/Core/Controls/docker.js</include>
                                <include>scripts/Core/Controls/magnet.js</include>
                                <include>scripts/Core/node.js</include>
                                <include>scripts/Core/edge.js</include>
                                <include>scripts/Core/abstractPlugin.js</include>
                                <include>scripts/Core/abstractLayouter.js</include>
                                <include>scripts/Plugins/**/*.js</include>
                            </includes>
                        </aggregation>
                    </aggregations>
                    <includes>
                        <include>**/apromore-editor.js</include>
                    </includes>
                    <jswarn>false</jswarn>
                    <nosuffix>false</nosuffix>
                    <sourceDirectory>${basedir}/target/apromore-editor-${project.version}/editor</sourceDirectory>
                    <outputDirectory>${basedir}/target/apromore-editor-${project.version}/editor</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>compress_js_css</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <unpackBundle>false</unpackBundle> <!-- This is important so that embedded JAR's don't show up twice -->
                    <instructions>
                        <Embed-Dependency> <!-- Embedded non-OSGI libraries. Remember to always keep the maven-war-plugin in sync -->
                            artifactId=
                                batik-anim|batik-awt-util|batik-bridge|batik-codec|batik-css|batik-dom|batik-ext
                                |batik-extension|batik-gui-util|batik-gvt|batik-parser|batik-script|batik-svg-dom|batik-svggen
                                |batik-swing|batik-transcoder|batik-util|batik-xml
                                |jaxb2-basics-runtime|xmlgraphics-commons
                        </Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                        <Embed-Directory>WEB-INF/lib</Embed-Directory>
                        <Bundle-ClassPath>.,{maven-dependencies},WEB-INF/classes</Bundle-ClassPath>
                        <Import-Bundle>
                            org.apache.catalina;version="[7.0,8)",
                            org.apromore.editor-platform-extension-bpmn2_0;resolution:=optional,
                            org.apromore.editor-platform-extension-diagram,
                            org.apromore.editor-platform-extension-downloader,
                            org.apromore.editor-platform-extension-epc;resolution:=optional,
                            org.apromore.editor-platform-extension-jpdl,
                            org.apromore.editor-platform-extension-pdf,
                            org.apromore.editor-platform-extension-petrinet;resolution:=optional,
                            org.apromore.editor-platform-extension-syntaxchecker;resolution:=optional,
                            org.apromore.editor-platform-extension-xpdl;resolution:=optional,
                            <!--org.apromore.editor-platform-extension-yawl;resolution:=optional,-->
                            org.apromore.manager-ws-model;version="[1.1,1.1]",
                            org.apromore.manager-security;version="[1.1,1.1]",
                            org.apromore.filestore-client;version="[1.0,1.1]",
                            <!--org.eclipse.gemini.blueprint.core;bundle-version="[1.0.0,2.0)",-->
                            org.springframework.aop;bundle-version="[3.1.0,4.0)",
                            org.springframework.aspects;bundle-version="[3.1.0,4.0)",
                            org.springframework.web;bundle-version="[3.1.0,4.0)",
                            org.springframework.beans;bundle-version="[3.1.0,4.0)",
                            org.springframework.context;bundle-version="[3.1.0,4.0)",
                            org.springframework.security.core;version="[3.1.0,4.0)",
                            org.springframework.security.config;version="[3.1.0,4.0)",
                            org.springframework.security.web;version="[3.1.0,4.0)",
                            org.springframework.security.remoting;version="[3.1.0,4.0)",
                            org.springframework.ws;version="[2.1.0.RELEASE,2.1.0.RELEASE]",
                            com.springsource.javax.validation;version="[1.0.0.GA,1.0.0.GA]",
                            com.springsource.org.apache.tools.ant;version="[1.8.3,1.8.3]"
                        </Import-Bundle>
                        <Import-Package>
                            org.eclipse.virgo.web.dm,
                            org.aopalliance.aop,
                            org.omg.spec.bpmn._20100524.model,
                            org.springframework.aop,
                            org.springframework.aop.framework,
                            org.apache.tools.ant.types,
                            org.apache.tools.ant,
                            net.sf.cglib.proxy,
                            net.sf.cglib.core,
                            net.sf.cglib.reflect,
                            !net.sf.saxon,
                            !com.sun.image.codec.jpeg,
                            !javax.media.jai,
                            !junit.framework,
                            !org.apache.avalon.framework.*,
                            !org.apache.fontbox.cff.*,
                            !org.apache.xml.serialize,
                            !org.apache.xml.utils,
                            !org.apache.xpath.*,
                            !org.junit,
                            !org.mozilla.javascript,
                            !org.w3c.css.sac,
                            !org.w3c.dom.smil,
                            !org.w3c.dom.svg,
                            !org.w3c.dom.xpath,
                            *
                        </Import-Package>
                        <Web-ContextPath>/${site.editor}</Web-ContextPath>  <!-- specified in site.properties -->
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                    <packagingExcludes> <!-- Regex to only include the same embedded dependencies as specified in maven-bundle-plugin -->
                        %regex[WEB-INF/lib/(?!batik|jaxb2|xmlgraphics).*jar]
                    </packagingExcludes>
                    <webResources>
                        <resource>
                            <directory>src/main/stencilsets</directory>
                            <targetPath>editor/stencilsets</targetPath>
                        </resource>
                        <resource>
                            <directory>target/sscompressor</directory>
                            <targetPath>editor/stencilsets</targetPath>
                        </resource>
                    </webResources>
                    <archive>
                        <manifestFile>
                            ${project.build.outputDirectory}/META-INF/MANIFEST.MF
                        </manifestFile>
                    </archive>
                </configuration>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main</directory>
                <filtering>true</filtering>
                <includes>
                    <include>site.properties.js</include>
                </includes>
            </resource>
        </resources>
    </build>

