<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore-editor-parent</artifactId>
        <version>1.2</version>
        <relativePath>../../</relativePath>
    </parent>

    <artifactId>editor-platform-extension-yawl</artifactId>
    <packaging>bundle</packaging>
    <version>1.2</version>
    <name>Apromore Editor Extension: YAWL</name>

    <properties>
        <editor-platform-extension.version>1.2</editor-platform-extension.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <unpackBundle>false</unpackBundle>
                    <instructions>
                        <Embed-Dependency>
                            artifactId=Saxon-HE|yawl-lib|yawleditor-layout;inline=true
                        </Embed-Dependency>
                        <Import-Package>
                             org.apache.xerces.parsers,
                            !com.sun.rave.web.ui.*,
                            !edu.uci.ics.jung.*,
                            !javax.faces.*,
                            !junit.framework,
                            !org.apache.wsif.*,
                            !org.apache.xml.resolver.*,
                            !org.bouncycastle.*,
                            !org.codemonkey.simplejavamail,
                            !org.custommonkey.xmlunit,
                            !org.eclipse.emf.*,
                            !org.eclipse.xsd.*,
                            !org.hibernate.*,
                            !org.jaxen.*,
                            !org.junit,
                            !twitter4j,
                            *
                        </Import-Package>
                        <Export-Package>
                            de.hbrs.oryx.yawl.servlets,
                            net.sf.saxon
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-diagram</artifactId>
            <version>${editor-platform-extension.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>jdom2-osgi</artifactId>
            <version>2.0.6</version>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json-osgi</artifactId>
            <version>20090211</version>
            <scope>provided</scope>
        </dependency>

        <!-- Embedded and inlined dependencies -->

        <dependency>
            <groupId>net.sf.saxon</groupId>
            <artifactId>Saxon-HE</artifactId>
            <version>9.6.0-7</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>yawleditor-layout</artifactId>
            <version>2.3</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>yawl-lib</artifactId>
            <version>2.3.1</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
